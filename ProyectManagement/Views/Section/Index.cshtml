@model IEnumerable<ProyectManagement.Models.Section>

@{
    ViewData["Title"] = "Sections";
    Layout = "_layoutProyect";
}

<h2 class="display-4">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-route-proyectID="@ViewData["currentProyect"]" class="btn btn-sm btn-outline-primary">Create New</a>
</p>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">@Html.DisplayFor(model => item.Name)</h6>
            </div>
            <p class="mb-1 small">@Html.DisplayFor(model => item.Descriptions)</p>
        </a>
    }
</div>
