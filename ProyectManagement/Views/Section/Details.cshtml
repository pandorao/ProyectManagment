@model ProyectManagement.Models.Section

@{
    ViewData["Title"] = "Details";
    Layout = "_layoutProyect";
}

<div class="row">
    <div class="col-md-4">
        <h6>Sections</h6>
        @await Component.InvokeAsync("SectionsSidebar", new { proyectId = (int)ViewData["currentProyect"] })
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h3 class="float-left">
                    Details
                </h3>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger float-right">Delete</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary float-right mr-1">Edit</a>
            </div>
            <div class="card-body">
                <h5>
                    @Html.DisplayFor(model => model.Name)
                </h5>
                <dl class="dl-horizontal">
                    <dd class="small">
                        @Html.DisplayFor(model => model.Descriptions)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>


