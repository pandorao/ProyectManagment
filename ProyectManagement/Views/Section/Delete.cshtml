@model ProyectManagement.Models.Section

@{
    ViewData["Title"] = "Delete";
    Layout = "_layoutProyect";
}
<div class="row">
    <div class="col-md-4">
        <h6>Sections</h6>
        @await Component.InvokeAsync("SectionsSidebar", new { proyectId = (int)ViewData["currentProyect"] })
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2>Delete</h2>
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Section</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Descriptions)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Descriptions)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Proyect)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Proyect.Description)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
