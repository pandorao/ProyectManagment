@model ProyectManagement.Models.Contributor

@{
    ViewData["Title"] = "Delete";
    Layout = "_layoutProyect";
}

<div class="row">
    <div class="col-md-4">
        <h6>Contributors</h6>
        @await Component.InvokeAsync("ContributorsSidebar", new { proyectId = (int)ViewData["currentProyect"] })
    </div>
    <div class="col-md-8">
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Contributor</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ApplicationUser.UserName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ApplicationUser.UserName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Section)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Section.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>