@using Microsoft.AspNetCore.Identity
@using ProyectManagement.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav flex-row">
            <li class="nav-item"><a class="nav-link" href="#" title="Manage">Hello @UserManager.GetUserName(User)!</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Proyect" asp-action="Index" title="Manage"><span class="fas fa-columns"></span> My Proyects</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><span class="fas fa-sliders-h"></span> Account</a></li>
            <li class="nav-item"><button type="submit" class="btn btn-outline-light navbar-btn navbar-link">Log out</button></li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav flex-row">
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
