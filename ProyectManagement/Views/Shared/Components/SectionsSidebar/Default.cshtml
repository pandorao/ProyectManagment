@model IEnumerable<Section>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">@Html.DisplayFor(model => item.Name)</h6>
            </div>
            <p class="small mb-1">@Html.DisplayFor(model => item.Descriptions)</p>
        </a>
    }
</div>



